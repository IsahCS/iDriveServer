generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Driver {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  car         String
  rating      Float
  ratePerKm   Float
  minKm       Int
  review      String

  @@map("drivers")
}
 
model Trip {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  customer_id String
  origin      String
  destination String
  duration    String
  distance    Float
  driverId    String
  driverName  String
  value       Float
  createdAt   DateTime @default(now())

  @@map("trips")
}
